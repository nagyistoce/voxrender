<!-- 
     Corner dataset for depicting camera focus
     function behavior. Consists of 8 boxes aligned
	 in a grid pattern 2x2x2.
-->
 
<Scene>
	
	<Version>
		<Major>1</Major>
		<Minor>0</Minor>
	</Version>
	
	<Camera>
		<FieldOfView>30</FieldOfView>
		<ApertureSize>12</ApertureSize>
		<FocalDistance>170</FocalDistance>
		<Position>[-71.2 182.4 -77.7]</Position>
		<Target>[32 28 32]</Target>
		<FilmWidth>512</FilmWidth>
		<FilmHeight>512</FilmHeight>
	</Camera>
	
	<Volume>
		<Import>
			<Resource>corners_64x64x64_8bit.raw</Resource>
			<Options>
				<Type>uint8</Type>
				<Size>[64 64 64 1]</Size>
				<Spacing>[1 1 1 1]</Spacing>
			</Options>
		</Import>
	</Volume>
	
    <Lights>
        <Light>
            <Color>[1.0 1.0 1.0]</Color>
            <Position>[-13 97.4 -17]</Position>
        </Light>
    </Lights>
	
	<Transfer>
		<Resolution>256</Resolution>
		<Materials>
			<Solid>
				<Thickness>1.0</Thickness>
			</Solid>
		</Materials>
		<Nodes>
			<Empty>
				<Material>Solid</Material>
				<Density>0.1</Density>
			</Empty>
			<Solid>
				<Material>Solid</Material>
				<Density>1.0</Density>
			</Solid>
		</Nodes>
	</Transfer>
	
</Scene>