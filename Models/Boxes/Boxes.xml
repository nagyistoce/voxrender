<!-- *******************************************
	 * Boxes Dataset : Simple data set, it has *
     *  8 solid boxes inside the corner edges  *
	 ******************************************* -->
 
<Scene>
	<Version>
		<Major>1</Major>
		<Minor>0</Minor>
	</Version>
	<Camera>
		<FieldOfView>30</FieldOfView>
		<ApertureSize>0</ApertureSize>
		<FocalDistance>0</FocalDistance>
		<Position>[32 32 -100]</Position>
		<Target>[32 32 32]</Target>
	</Camera>
	<Film>
		<Height>256</Height>
		<Width>256</Width>
	</Film>
	<Volume>
		<Import>
			<Resource>Boxes.raw</Resource>
			<Options>
				<Endianess>little</Endianess>
				<BytesPerVoxel>1</BytesPerVoxel>
				<Size>[64 64 64 1]</Size>
			</Options>
		</Import>
		<Spacing>[1 1 1]</Spacing>
	</Volume>
    <Lights>
        <Light>
            <Color>[1.0 1.0 1.0]</Color>
            <Position>[0, 100, 0]</Position>
        </Light>
    </Lights>
	<Transfer>
		<Node>[0 12 0 0 0]</Node>
		<Node>[1 18 0 0 1]</Node>
		<Node>[2 23 0 0 2]</Node>
		<Node>[3 29 0 0 3]</Node>
		<Node>[4 34 0 0 4]</Node>
	</Transfer>
</Scene>