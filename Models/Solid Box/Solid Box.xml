<!-- *******************************************
	 * Solid Box Dataset : Simple data set of  *
     *  a box in the middle of the volume      *
	 ******************************************* -->
 
<Scene>
	<Version>
		<Major>1</Major>
		<Minor>0</Minor>
	</Version>
	<Camera>
		<FieldOfView>30</FieldOfView>
		<ApertureSize>0</ApertureSize>
		<FocalDistance>0</FocalDistance>
		<Position>[32 32 -100]</Position>
		<Target>[32 32 32]</Target>
	</Camera>
	<Film>
		<Height>256</Height>
		<Width>256</Width>
	</Film>
	<Volume>
		<Import>
			<Resource>Solid Box.raw</Resource>
			<Options>
				<Endianess>little</Endianess>
				<BytesPerVoxel>1</BytesPerVoxel>
				<Size>[32 64 64 1]</Size>
			</Options>
		</Import>
		<Spacing>[1 1 1]</Spacing>
	</Volume>
    <Lights>
		<Ambient>[1.0 1.0 1.0]</Ambient>
        <Light>
            <Color>[1.0 1.0 1.0]</Color>
            <Position>[0, 100, 0]</Position>
        </Light>
    </Lights>
</Scene>